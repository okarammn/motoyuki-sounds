<div class="contents-s">
  <div class="profile-s">
    <%= image_tag Profile.find(1).image, class: 'profile-image' %>
    <h1 class="profile-name-s"><%= @profile.name %></h1>
    <div class="profile-text-s">
      <%= sanitize @profile.text, tags: %w(h1 h2 h3 h4 h5 h6 ul ol li p a img del table tr td em br strong div), attributes:  %w(id class href) %>
    </div>
  </div>
  <% if user_signed_in? %>
  <div class="edit-profile">
    <%= link_to 'プロフィールを編集', '/profiles/1/edit', class: "link-btn" %>
  </div>
  <% end %>
  <%= link_to "トップへ戻る", root_path, class: 'top-link' %> 　
</div>