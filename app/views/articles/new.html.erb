<div class="contents-n">  
  <h2>記事投稿</h2>
  <div class="field">
    <%= form_for @article do |f| %>
      <%=f.label ":サムネイル用画像ファイル" %><br>
      <%= f.file_field :image, class: "image-form" %><br>
      <br>
      <%= f.label ":タイトル" %><br>
      <%= f.text_field :title, class: "title-form" %><br>
      <br>
      <%= f.label ":本文" %>
      <%= f.hidden_field :text, id: :article_text %>
      <trix-editor input="article_text" class="text-form"></trix-editor>
      <div class="post-article">
        <%= f.submit '投稿', class: "submit-btn" %>
      </div>  
    <% end %>
  </div>  
</div>