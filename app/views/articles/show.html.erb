<div class="contents-s">
  <div class="article-s">
    <h1 class="article-title-s"><%= @article.title %></h1>
    <p class="article-create-s">
      投稿日:   <%= @article.updated_at.strftime('%Y/%m/%d') %>
    <% if user_signed_in? %>
      <%= link_to '記事を編集', edit_article_path(@article.id), method: :get %>
      <%= link_to '記事を削除', article_path, method: :delete, data: {confirm: "削除しますか？"} %>
    <% end %>
    </p>
    
    <div class="article-text-s">
      <%= sanitize @article.text, tags: %w(h1 h2 h3 h4 h5 h6 ul ol li p a img del table tr td em br strong div), attributes:  %w(id class href) %>
    </div>
  </div>
  <%= link_to "トップへ戻る", root_path, class: 'top-link' %> 　
</div>